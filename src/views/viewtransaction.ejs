<body>
  <%- include("../../utils/header")%>
  
 
  <%- include("../../utils/side")%>
  



  

  <main id="main" class="main">
   
    <div class="pagetitle">
      <h1>Data Tables</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/dashboard">Home</a></li>
          <li class="breadcrumb-item">Transaction</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section">
      <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-header-tran">
                    <form class="filter-transaction" action="/filtertransaction" method='post'>  
                        <label><b>Service Id</b></label>
                        <input type="text" name="filterserviceid">  
                        <label><b>Service Name</b></label>
                        <input type="text" name="filtername">
                        <label><b>Transaction Id</b></label>
                        <input type="text" name="filtertransactionid">
                        <label><b>Amount</b></label>
                        <input type="number" name="filteramount">
                        <input type="submit" value="Filter"></form>
                </div>
            </div>

          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Datatables</h5>
             
              <!-- Table with stripped rows -->
              <table class="table datatable">
                <thead>
                  <tr>
                    <th scope="col">S No.</th>
                    <th scope="col"> Transaction Id</th>
                    <th scope="col">Amount</th>
                    <th scope="col">Service name</th>
                    <th scope="col">Service Id</th>
                  </tr>
                </thead>
                
                <tbody>
                  <%let i=1; %>
                  <% for (let dataobj of transaction){
                   %>
                  <tr>
                    <th scope="row"><%=i%></th>
                    <td><%=dataobj.transaction_id%></td>
                    <td><%=dataobj.amount%></td>
                    <td><%=dataobj.service_name%></td>
                    <td><%=dataobj.service_id%></td>
                    <%id=dataobj._id.toString();%>
                    <td><form class="filter" action= "/detail_transaction" method="post">
                      <input type="hidden" name="id" value="<%=id%>" />
                      <input type="submit"value="Detail">
                    </form></td>
                  </tr>
                <%
                i=i+1;
              }%>
                </tbody>
              </table>
              <!-- End Table with stripped rows -->

            </div>
          </div>

        </div>
      </div>
       <%- include("../../utils/flash")%> 
    </section>
    
